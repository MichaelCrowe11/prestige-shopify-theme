      "predictive_search": true,
      "mega_menu": true,
      "color_swatches": true,
      "size_chart": true,
      "instagram_feed": true,
      "product_zoom": true,
      "product_video": true,
      "sticky_header": true,
      "back_to_top": true,
      "cookie_consent": true,
      "age_verification": false,
      "store_locator": false
