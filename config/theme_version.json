      "browsers": {
        "chrome": "90+",
        "firefox": "88+",
        "safari": "14+",
        "edge": "90+",
        "opera": "76+",
        "ios_safari": "14+",
        "android_chrome": "90+"
      },
      "devices": [
        "desktop",
        "laptop",
        "tablet",
        "mobile"
