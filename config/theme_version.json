    "support_email": "support@prestige-theme.com",
    "documentation_url": "https://prestige-theme.com/docs",
    "minimum_shopify_version": "2.0",
    "features": {
      "online_store_2_0": true,
      "dynamic_checkout": true,
      "gift_cards": true,
      "customer_accounts": true,
      "multi_language": true,
      "multi_currency": true,
      "product_reviews": true,
