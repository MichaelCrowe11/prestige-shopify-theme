<div class="section">
  <div class="container">
    <h1>{{ blog.title }}</h1>

    <div class="blog-grid grid grid--3-col">
      {% paginate blog.articles by 12 %}
        {% for article in blog.articles %}
          <article class="blog-card">
            {% if article.image %}
              <a href="{{ article.url }}" class="blog-card__image">
                <img src="{{ article.image | image_url: width: 600 }}"
                     alt="{{ article.image.alt | escape }}"
                     loading="lazy"
                     width="600"
                     height="400">
              </a>
            {% endif %}

            <div class="blog-card__content">
              <div class="blog-card__meta">
                <time>{{ article.published_at | date: "%B %d, %Y" }}</time>
                {% if article.tags.size > 0 %}
                  <span class="blog-card__tags">
                    {% for tag in article.tags limit: 2 %}
                      <a href="{{ blog.url }}/tagged/{{ tag | handle }}">#{{ tag }}</a>
                    {% endfor %}
                  </span>
                {% endif %}
              </div>

              <h3 class="blog-card__title">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h3>

              <div class="blog-card__excerpt">
                {{ article.excerpt | strip_html | truncate: 150 }}
              </div>

              <a href="{{ article.url }}" class="blog-card__link">
                Read more â†’
              </a>
            </div>
          </article>
        {% endfor %}

        {% if paginate.pages > 1 %}
          <div class="pagination">
            {{ paginate | default_pagination }}
          </div>
        {% endif %}
      {% endpaginate %}
    </div>
  </div>
</div>

<style>
  .blog-grid {
    margin-top: 3rem;
  }

  .blog-card {
    background: var(--color-surface);
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .blog-card__image {
    display: block;
    padding-bottom: 66.67%;
    position: relative;
    overflow: hidden;
    background: #f5f5f5;
  }

  .blog-card__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-card__content {
    padding: 1.5rem;
  }

  .blog-card__meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-bottom: 1rem;
  }

  .blog-card__tags a {
    color: var(--color-accent);
    margin-left: 0.5rem;
  }

  .blog-card__title {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .blog-card__excerpt {
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .blog-card__link {
    font-weight: 500;
    text-decoration: none;
    color: var(--color-primary);
  }

  .pagination {
    grid-column: 1 / -1;
    text-align: center;
    margin-top: 3rem;
  }
</style>

{% schema %}
{
  "name": "Blog posts"
}
{% endschema %}