{% comment %}
  Footer Section
  Author: Michael Benjamin Crowe
{% endcomment %}

<footer class="footer" data-section-id="{{ section.id }}" data-section-type="footer">
  <div class="container">
    {% if settings.show_newsletter %}
      <div class="footer__top">
        <div class="footer__newsletter">
          <h3 class="footer__newsletter-title">{{ 'footer.newsletter.title' | t }}</h3>
          <p class="footer__newsletter-subtitle">{{ 'footer.newsletter.subtitle' | t }}</p>

          <form class="footer__newsletter-form" action="/contact" method="post" data-newsletter-form>
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="âœ“">
            <input type="hidden" name="contact[tags]" value="newsletter">

            <input type="email"
                   name="contact[email]"
                   class="form__input footer__newsletter-input"
                   placeholder="{{ 'general.newsletter.email_placeholder' | t }}"
                   required>
            <button type="submit" class="button button--primary">
              {{ 'general.newsletter.submit' | t }}
            </button>
          </form>
        </div>
      </div>
    {% endif %}

    <div class="footer__main">
      <div class="footer__columns grid grid--{{ settings.footer_layout | replace: '-columns', '' | replace: '-column', '' }}-col">
        {% for block in section.blocks %}
          <div class="footer__column">
            <h4 class="footer__column-title">{{ block.settings.title }}</h4>

            {% case block.type %}
              {% when 'link_list' %}
                <ul class="footer__links">
                  {% for link in linklists[block.settings.menu].links %}
                    <li class="footer__link">
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>

              {% when 'text' %}
                <div class="footer__text">
                  {{ block.settings.text }}
                </div>

              {% when 'contact' %}
                <div class="footer__contact">
                  {% if block.settings.email != blank %}
                    <p><a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a></p>
                  {% endif %}
                  {% if block.settings.phone != blank %}
                    <p><a href="tel:{{ block.settings.phone }}">{{ block.settings.phone }}</a></p>
                  {% endif %}
                  {% if block.settings.address != blank %}
                    <address>{{ block.settings.address }}</address>
                  {% endif %}
                </div>
            {% endcase %}
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        {{ 'footer.copyright' | t: date: 'now' | date: '%Y', shop_name: shop.name }}
      </p>

      {% if settings.show_social_icons %}
        <div class="footer__social">
          {% if settings.social_facebook != blank %}
            <a href="{{ settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}

          {% if settings.social_instagram != blank %}
            <a href="{{ settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
              </svg>
            </a>
          {% endif %}

          {% if settings.social_twitter != blank %}
            <a href="{{ settings.social_twitter }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Twitter">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          {% endif %}

          {% if settings.social_pinterest != blank %}
            <a href="{{ settings.social_pinterest }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Pinterest">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738a.36.36 0 01.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

