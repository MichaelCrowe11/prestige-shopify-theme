  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "info": "Use a direct MP4 video URL"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video poster image",
      "info": "Shown while video loads"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Fallback image",
      "info": "Used if no video is provided"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Luxury Redefined"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Experience the epitome of elegance with our curated collection</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Second button label"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Second button link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Section height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 90
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 70
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content width",
      "min": 600,
      "max": 1200,
      "step": 100,
      "unit": "px",
      "default": 800
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero with video"
    }
  ]
}
{% endschema %}