{% comment %}
  Password Page Section
  Shown when the storefront is password-protected
{% endcomment %}

<section class="page-password section section-{{ section.id }}">
  <div class="container">
    <div class="page-password__content">
      {% if shop.name %}
        <h1 class="page-password__heading">{{ shop.name }}</h1>
      {% endif %}

      <p class="page-password__text">{{ 'general.password_page.opening_soon' | t | default: 'Opening Soon' }}</p>

      {% if shop.password_message and shop.password_message != blank %}
        <div class="page-password__message rte">
          {{ shop.password_message }}
        </div>
      {% endif %}

      {% form 'storefront_password' %}
        <div class="page-password__form">
          {% if form.errors %}
            <div class="form__message form__message--error" role="alert">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <label for="password" class="visually-hidden">{{ 'general.password_page.password_label' | t | default: 'Password' }}</label>
          <input type="password"
            name="password"
            id="password"
            class="input"
            placeholder="{{ 'general.password_page.password_label' | t | default: 'Enter store password' }}"
            autocomplete="current-password">

          <button type="submit" class="btn btn--primary">
            {{ 'general.password_page.enter' | t | default: 'Enter' }}
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</section>

<style>
  .page-password {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    text-align: center;
    background: var(--color-background);
  }

  .page-password__heading {
    font-size: clamp(2rem, 4vw, 3.5rem);
    margin-bottom: 0.5rem;
  }

  .page-password__text {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }

  .page-password__form {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 500px;
    margin: 2rem auto 0;
  }

  .page-password__form .input {
    flex: 1;
    min-width: 200px;
  }
</style>

{% schema %}
{
  "name": "Password page",
  "settings": []
}
{% endschema %}